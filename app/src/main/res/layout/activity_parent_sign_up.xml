<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Login.ParentSignUp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="254dp">
        <ImageView
            android:src="@drawable/up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription">
        </ImageView>
    </FrameLayout>
    <TextView
        android:textColor="#0D65F7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="120dp"
        android:textStyle="bold"
        android:textSize="32dp"
        android:text="SIGN UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage">
    </TextView>
    <EditText
        android:id="@+id/SignUpMailETxt"
        android:drawableLeft="@drawable/baseline_email_24"
        android:background="@drawable/editbutton"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="  Email ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields">
    </EditText>
    <EditText
        android:id="@+id/SignUpPassETxt"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:background="@drawable/editbutton"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="   Password "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields">
    </EditText>
    <EditText
        android:id="@+id/SignUpREPassETxt"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:background="@drawable/editbutton"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="   Re-enter Password "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields">
    </EditText>
    <Button
        android:layout_gravity="center"
        android:id="@+id/SignUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_desing"
        android:padding="15dp"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="HardcodedText,SpUsage">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:text="Already have an account?"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage">
        </TextView>

        <TextView
            android:gravity="left"
            android:id="@+id/loginTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:text=" Login Here !"
            android:textColor="#03A9F4"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage">
        </TextView>
    </LinearLayout>


</LinearLayout>